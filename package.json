    "compodoc": "0.0.41",
    "core-js": "2.4.1",
    "coveralls": "^2.13.0",
    "istanbul": "^0.4.5",
    "jasmine": "^2.5.3",
    "jasmine-core": "2.5.2",
    "karma": "^1.4.1",
